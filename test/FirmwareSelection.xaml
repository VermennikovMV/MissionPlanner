<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MissionPlanner.test.FirmwareSelection">
    <ContentPage.Content>
        <StackLayout>
            <Label TextColor="White" BackgroundColor="Transparent">Существует несколько вариантов. Пожалуйста, отфильтруйте до нужного выбора.</Label>
            <Label x:Name="lbltype" TextColor="White" BackgroundColor="Transparent">Тип</Label>
            <Picker x:Name="mavtype" Title="Тип" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>
            <Label x:Name="lblversiontype"  TextColor="White" BackgroundColor="Transparent">Тип версии</Label>
            <Picker x:Name="versiontype" Title="Тип версии" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>

            <Label x:Name="lblplatform"  TextColor="White" BackgroundColor="Transparent">Платформа</Label>
            <Picker x:Name="platform" Title="Платформа" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>
            <Label  x:Name="lblversion" TextColor="White" BackgroundColor="Transparent">Версия</Label>
            <Picker x:Name="version" Title="Версия" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>

            <Label x:Name="lblformat"  TextColor="White" BackgroundColor="Transparent">Формат</Label>
            <Picker x:Name="format" Title="Формат" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>
             <Label x:Name="lblusbid"  TextColor="White" BackgroundColor="Transparent">ID USB</Label>
             <Picker x:Name="USBID" Title="ID USB" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>


            <Label  x:Name="lblboardid" TextColor="White" BackgroundColor="Transparent">ID платы</Label>
            <Picker x:Name="board_id" Title="ID платы" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>
            <Label  x:Name="lblbootloaderid" TextColor="White" BackgroundColor="Transparent">ID загрузчика</Label>
            <Picker x:Name="bootloader_str" Title="ID загрузчика" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="OnSelectedIndexChanged"></Picker>

            <Label x:Name="lblfirmware"  TextColor="White" BackgroundColor="Transparent">Прошивки - выберите файл для загрузки и установки (.apj)</Label>
            <Picker x:Name="Result" Title="Прошивки" HorizontalOptions="FillAndExpand" Margin="10" SelectedIndexChanged="Result_OnSelectedIndexChanged"></Picker>
            <Button x:Name="Button" Clicked="Button_OnClicked" Text="Загрузить прошивку" HeightRequest="30"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>